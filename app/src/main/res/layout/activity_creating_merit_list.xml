<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgradient"
    android:id="@+id/MeritListTableLayoutId"
    android:orientation="vertical"
    tools:context=".CreatingMeritList">

    <TextView
    android:paddingLeft="20sp"
    android:paddingRight="20sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Khulna University of Engineering and Technology,Khulna"
    android:layout_gravity="center_horizontal"
    android:textSize="20sp"
    />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1,2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp">

        <TableRow
            android:background="#922B2C2C"
            >

            <TextView
                android:layout_column="1"
                android:text="Applicant's ID"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                />


            <TextView
                android:gravity="center"
                android:layout_column="1"
                android:text="Merit Position"
                android:textSize="15sp"
                android:textStyle="bold"
                />

        </TableRow>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/meritlistrecylerViewId"
            android:divider="@color/black"
            android:dividerHeight="2dp"
            android:listSelector="#03A9F4"
            />
    </TableLayout>



</LinearLayout>